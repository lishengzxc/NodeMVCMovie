extends ../layout
block content
    .container
        .row
            .col-md-5
                form(method="POST", action="/user/signup")
                    .modal-header 注册
                    .modal-body
                        .form-group
                            label(for="siguupName") 用户名
                            input#siguupName.form-control(name="user[name]")
                        .form-group
                            label(for="siguupPassword") 密码
                            input#siguupPassword.form-control(name="user[password]", type="password")
                    .modal-footer
                        button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit") 提交