extends ../layout
block content
    .container
        .row
            .col-md-5
                form(method="POST", action="/user/signin")
                    .modal-header 登陆
                    .modal-body
                        .form-group
                            label(for="siguinName") 用户名
                            input#siguinName.form-control(name="user[name]")
                        .form-group
                            label(for="siguinPassword") 密码
                            input#siguinPassword.form-control(name="user[password]", type="password")
                    .modal-footer
                        button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit") 登陆